@model IEnumerable<MVCProject.Models.Facility>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FacilityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FacilityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.FacilityID }) |
                @Html.ActionLink("Details", "FacilityByZip", new { value = item.Address.Substring(item.Address.IndexOf("-")+1,5)}) |
                @Html.ActionLink("Delete", "Delete", new { id=item.FacilityID })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
